<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag gravatar_for(@user), class: 'avatar-full' %>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Verification</div>
            <div class="panel-body">

             <ul class="sidebar-list">
             <% if @user.confirmation_token %>
                <li>Email Address<span class="pull-right icon-babu"><i class="far fa-check-circle"></i></span></li>
             <% end %>
                       <% if @user.provider %>
            <li>Facebook<span class="pull-right icon-babu"><i class="far fa-check-circle"></i></span></li>
          <% end %>
          <% if current_user %>
            <li>Phone number<span class="pull-right icon-babu"><i class="far fa-check-circle"></i></span></li>
          <% end %>
            </ul>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <h2><%= @user.fullname %></h2>

        <div class="description row-space-3">
            <%= @user.description%>
        </div>
        <h4>Listing (<%= @rooms.length %>)</h4>

        <div class="row">
      <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
    </div>
    </div>
</div>