<div class="row">
  <div class="col-md-3">
  <ul class="sidebar-list">
 <li class="sidebar-item"> <%= link_to "Your Listing", 
 rooms_path, class:"sidebar-link active"%>
 </li> 
<li class="sidebar-item"> <%= link_to "Your Trips", 
 your_trips_path, class:"sidebar-link active" %>
 </li> 

  </ul>

  </div>

  <div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
  Listing
    </div>
   <div class="panel-body">
   <% @rooms.each do |room| %>
    <div class="row">
      <div class="col-md-2">
      
      <%= image_tag room.cover_photo(), :size => "100x100", :crop => :fill  %>
      </div> 

      <div class="col-md-7">
 
   <%= link_to room.listing_name, room_path(room) %>
      </div>
      <div class="col-md-3 right">
 <%= link_to "Update", listing_room_path(room), class:"btn btn-form" %>
      </div>
      
      </div>
      <hr/>
    <% end %>
   
   </div>
  </div>
  </div>

</div>