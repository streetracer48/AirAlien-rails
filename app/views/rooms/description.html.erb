<div class="row">

  <div class="col-lg-3">

   <%= render 'room_menu' %>
  </div>

   <div class="col-lg-9">

    <div class="card">

     <div class="card-header">
   Description
     </div>

      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f| %>

             <div class="row">

                <div class="col-lg-12">

                <div class="form-group">

                 <label for="Listing name">Listing name</label>

                 <%= f.text_field :listing_name,
                 placeholder: "Listing name",
                 class: 'form-control',
                 required: true
                 %>
                </div>

                 </div>

              </div>

              <div class="row">
              <div class="col-lg-12">
                  <div class="form-group">
                      <label for="price">Summary</label>
                      <%= f.text_area :summary,   rows: 5, 
                                                  placeholder: 'Tell us something about your place..',
                                                  class: 'form-control',
                                                  required: true %>

                  </div>
              </div>
          </div>
          <div class="text-center">
          <%= f.submit "Save", class: 'btn btn-form' %>
      </div>

            <% end %>

         <div>


      </div>

    </div>


   </div>





</div>